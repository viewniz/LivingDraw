    body
        include ../components/main_header
        .container(style='padding-top: 100px;')
            .grid-column
                if(exhibitions)
                    -for(let i=0;i<exhibitions.length;i++)
                        a(href="/exhibition/"+exhibitions[i]._id)
                            .Galleryframe
                                .Galleryframe_image
                                    .tumble
                                        .centered
                                            img(src="/picPoster/" + exhibitions[i].image[0].picFilename)
                                .detail
                                    .terminateday.sub
                                        =exhibitions[i].startDate + " ~ " + exhibitions[i].endDate
                                    .Gallerytitle.sub
                                        =exhibitions[i].title

                                p 실수령액 :
                        .form-row.category.mt-5
                            .title.work_price
                                p 키워드
                            .seleted_keyword
                                ul#keyword_part.test
                            .form-group.col-md-12
                                input#keyword.form-control.key_word(oninput="" name="keyword" placeholder="키워드" type="text")
                        .form-row.category.mt-5
                            .title.work_price
                                p 작가 노트&작품 설명
                            .form-group.col-md-12
                                textarea.resizable_textarea.form-control.author_note(placeholder="Description" name="description")
                    a(href="author_register.html")

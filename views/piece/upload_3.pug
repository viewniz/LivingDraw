    body
        .container
            .row.mt-5
            .row.mt-5.center_main
                .author_register_form
                    .process_bar
                        .process_bar.pre_stage
                    form#form(runat="server")
                        .form-row.work_form
                            .title.work_size_title
                                p 작품크기
                            .form-group.col-md-4.work_size_border
                                p 가로
                                input#width.form-control.Work_size(name="width" placeholder="가로(cm)" type="text")

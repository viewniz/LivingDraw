    body
        style.
            .mainheader {
                top: 0;
            }
        script.
        include ../components/main_header
        .container
            .row.mt-5
            .row.mt-5.center_main
            .row
                .col-xs-12.col-md-12
                    .left_category
                        .checkout_content
                            h2 작품목록
                            - for(let i=0;i<border.length;i++)
                                .cart__item.cart__item--original.cart__item--limited-enabled
                                    // <img class="cart__item__type-icon"
                                    // src="//d3t95n9c6zzriw.cloudfront.net/checkout/saatchiart_final_icon_only.png">>
                                    h4.cart__item__type-icon=i + 1 + "."
                                    a.cart__item__photo(href='/piece/update/'+border[i]._id)
                                        img(src="/pic_300/"+ border[i].image[0].picFilename)
                                    .cart__item__details
                                        .cart__item__details__row
                                            .cart__item__details__left
                                                .cart__item__title=border[i].title + "(" + border[i].titleSub + ")"
                                                .cart_item_author=border[i].lastName + border[i].firstName + "(" + border[i].firstNameE + " " + border[i].lastNameE + ")"
                                                .cart_item_size=border[i].width + " W * " + border[i].height + " H * " + border[i].depth + " cm"
                                            .cart__item__details__right
                                                a(href='javascript:void(0);', onclick='removePiece("'+border[i]._id+'"); return false;') Remove
                                    .cart__item__pricing
                                        div
                                            div
                                            div
                                                span.cart_item_price=border[i].price_string+" ￦"
                            .cart__total
                                .cart__total__inner
                                    .cart__total__row
                                        div 등록작품수

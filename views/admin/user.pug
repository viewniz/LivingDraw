    body.nav-md
        .container.body
            .main_container
                include components/admin_side_nav_bar
            // page content
            .right_col(role='main')
                div
                    .page-title
                        .title_left
                            h3
                                | User
                        .title_right
                            .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
                                .input-group
                                    input.form-control(type='text', placeholder='Search for...')
                                    span.input-group-btn
                                        button.btn.btn-default(type='button') Go!
                    .clearfix
                    .col-md-12.col-sm-12.col-xs-12
                        .x_panel
                            .x_title
                                h2 작품 관리
                                ul.nav.navbar-right.panel_toolbox
                                    li
                                        a.collapse-link
                                            i.fa.fa-chevron-up
                                    li.dropdown
                                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                            i.fa.fa-wrench
                                        ul.dropdown-menu(role='menu')
                                            li
                                                a(href='#') Settings 1
                                            li
                                                a(href='#') Settings 2
                                    li
                                        a.close-link
                                            i.fa.fa-close
                                .clearfix
                            .x_content
                                p.text-muted.font-13.m-b-30
                                table#datatable-checkbox.table.table-striped.table-bordered.bulk_action
                                    thead
                                        tr
                                            th
                                            th CheckBox
                                            th 이름
                                            th 영문
                                            th 이메일
                                            th 가입경로
                                            th 메일인증
                                            th 판매자 여부
                                            th 판매자 신청 여부
                                            th 핸드폰번호
                                            th 가입일자
                                            th 관리자 여부
                                    tbody
                                        - for(var i=0;i<users.length;i++)
                                            tr
                                                td
                                                th
                                                    //button.btn.btn-default(type='button', onclick="location.href='/admin/border/update/"+border[i]._id+"' ") 수정
                                                    //button.btn.btn-default(type='button', onclick='deleteBorder("'+border[i]._id+'")') 삭제
                                                td= users[i].lastName + " " + users[i].firstName
                                                td= users[i].lastNameE + " " + users[i].firstNameE
                                                td= users[i].email
                                                td= users[i].provider
                                                if(users[i].isCertificate)
                                                    td O
                                                else
                                                    td N
                                                if(users[i].isSeller)
                                                    td O
                                                else
                                                    td N
                                                if(users[i].isSignUpSeller)
                                                    td O
                                                else
                                                    td N
                                                if(users[i].phoneNumber)
                                                    td= users[i].phoneNumber
                                                else
                                                    td X
                                                td= users[i].submit_date
                                                if(users[i].isAdmin)
                                                    td O
                                                else
                                                    td X
                                //button.btn.btn-default(type='button', onclick="location.href='/admin/border/upload/'") 추가
            // /page content
            // footer content
            footer
                .pull-right
                    | Gentelella - Bootstrap Admin Template by
                    a(href='https://colorlib.com') Colorlib
                .clearfix

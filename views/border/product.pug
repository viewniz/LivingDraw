                        // / SLIDER
                        hr#shadow
                        // MARKETING LINE
                        // FEATURED PRODUCTS
                        div(style='text-align: center; z-index: -1;')
                            p#paintstory(type='button', style='display: inline-block; border:none;')
                                | 작품 상세 설명
                                a#vareiety_icon.icono-caretDown(style=' height: 30px;')
                        #paintdetail.articles-grid.row
                            // ITEM
                            .col-12.col-md-6.col-lg-6.col-xl-6
                                p.lead.text-center.text-primary(style='margin-bottom: 0;')=border.description
                                hr
                                p
                                    ="Keywords : "
                                    a(style='color: #6c757d;')
                                        -for(var i=0;i<border.keyWords.length;i++)
                                            if(!(i===(border.keyWords.length-1)))
                                                =border.keyWords[i]+', '
                                            else
                                                =border.keyWords[i]
                                p
                                p
                                    ="Subject : "
                                    a(style='color: #6c757d;')
                                        case border.subject
                                            when 'Ab'
                                                | 추상화
                                            when 'La'
                                                | 풍경화
                                            when 'Pe'
                                                | 인물화
                                            when 'Po'
                                                | 초상화
                                            when 'Vi'
                                                | 상상화
                                            when 'An'
                                                | 동물화
                                            when 'St'
                                                | 정물화
                                            default
                                                | error
                                p
                                    ="Styles : "
                                    a(style='color: #6c757d;')
                                        case border.style
                                            when 'Im'
                                                td 인상주의
                                            when 'Fi'
                                                td 순수미술
                                            when 'Ex'
                                                td 표현주의
                                            when 'Ab'
                                                td 추상주의
                                            when 'Mo'
                                                td 모더니즘
                                            when 'Re'
                                                td 현실주의
                                            default
                                                td error
                                p
                                    ="Mediums : "
                                    a(style='color: #6c757d;')
                                        - for(var j=0;j<border.medium.length;j++)
                                            case border.medium[j]
                                                when 'Oi'
                                                    | 유채
                                                when 'Ac'
                                                    | 아크릴
                                                when 'Wa'
                                                    | 수채
                                                when 'In'
                                                    | 잉크
                                                when 'Pa'
                                                    | 페인트
                                                when 'Ge'
                                                    | 석고
                                                when 'Co'
                                                    | 채색
                                                when 'Ti'
                                                    | 수묵담채
                                                when 'Mu'
                                                    | 먹
                                                default
                                                    | error
                                            if(border.medium.length != j + 1)
                                                =", "
                                p
                                    ="Materials : "
                                    a(style='color: #6c757d;')
                                        - for(var j=0;j<border.material.length;j++)
                                            case border.material[j]
                                                when 'Ca'
                                                    | 캔버스
                                                when 'Pa'
                                                    | 종이
                                                when 'Wo'
                                                    | 나무
                                                when 'Cd'
                                                    | 카드보드
                                                when 'Ot'
                                                    | 기타
                                                when 'So'
                                                    | 부드러운 재질(뜨개실, 면, 옷감)
                                                when 'Hw'
                                                    | 화선지
                                                when 'Su'
                                                    | 순지
                                                when 'Ja'
                                                    | 장지
                                                when 'Ha'
                                                    | 한지
                                                default
                                                    | error
                                            if(border.material.length != j + 1)
                                                =", "
